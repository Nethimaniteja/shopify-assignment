{%- if settings.enable_lazy_loading_sections and section.index != null -%}
  {% assign lazy_load = true %}
{%- endif -%}

{% if lazy_load != blank %}
  <lazy-section>
{% endif %}

{% if lazy_load == blank %}
  {%- if section.settings.video_link != blank -%}
    {{ 'custom-video.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'custom-video.js' | asset_url }}" defer></script>

    {% style %}
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.mobile_padding_top  }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom}}px;
    }
    @media only screen and (min-width: 750px) {
      .padding-{{ section.id }} {
        padding-top: {{ section.settings.desktop_padding_top }}px;
        padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
      }
    }
    {% endstyle %}
  
    {% assign url = section.settings.video_link %}
    {% assign url_parts = url | split: 'v=' %}
    {% assign video_id = url_parts.last | split: '&' | first %}

    <div class="page-width padding-{{ section.id }} ">
      {% if section.settings.heading != blank %}
        <h3 class="font-body-bold">{{ section.settings.heading }}</h3>
      {% endif %}
      <custom-video>
        <div class="custom-video__cover-container">
          {% if section.settings.cover_image != blank %}
            {{
              section.settings.cover_image
              | image_url: width: 1500
              | image_tag:
                class: 'custom-video__cover-image',
                widths: '375, 750, 1100, 1500',
                height: 500,
                width: '100%',
                sizes: '100vw',
                alt: section.settings.heading
              | escape
            }}
          {% else %}
            {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
          {% endif %}
          <button class="custom-video__play-button">
            {% render 'play-button' %}
          </button>
        </div>
        <div class="custom-video__iframe-container hidden">
          <span class="custom-close__svg-wrapper">
            {{- 'icon-close.svg' | inline_asset_content -}}
          </span>
          <iframe
            src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&controls=0&loop=1&playlist={{ video_id }}"
            class="js-youtube"
            allow="autoplay; encrypted-media"
            allowfullscreen
            title="{{ section.settings.heading | escape }}"
          ></iframe>
        </div>
      </custom-video>
    </div>
  {%- endif -%}

{% else %}
  <div class="lazy-section-spinner-container">
    {%- render 'loading-spinner' -%}
  </div>
{% endif %}

{% if lazy_load != blank %}
  </lazy-section>
{% endif %}

{% schema %}
{
  "name": "Custom Video",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Product Video"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "Cover Image"
    },
    {
      "type": "text",
      "id": "video_link",
      "label": "Video URL"
    },
    {
      "type": "header",
      "content": "Desktop padding"
    },
    {
      "type": "range",
      "id": "desktop_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top desktop",
      "default": 0
    },
    {
      "type": "range",
      "id": "desktop_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom desktop",
      "default": 32
    },
    {
      "type": "header",
      "content": "Mobile padding"
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 0
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom mobile",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Custom Video"
    }
  ]
}
{% endschema %}
