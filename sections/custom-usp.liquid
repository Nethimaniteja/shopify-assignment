{%- if settings.enable_lazy_loading_sections and section.index != null -%}
  {% assign lazy_load = true %}
{%- endif -%}

{% if lazy_load != blank %}
  <lazy-section>
{% endif %}

{% if lazy_load == blank %}
  {%- if section.blocks.size > 0 -%}
    {% style %}
      .padding-{{ section.id }} {
        padding-top: {{ section.settings.mobile_padding_top  }}px;
        padding-bottom: {{ section.settings.mobile_padding_bottom}}px;
      }
      @media only screen and (min-width: 750px) {
        .padding-{{ section.id }} {
          padding-top: {{ section.settings.desktop_padding_top }}px;
          padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
        }
      }
    {% endstyle %}

    {{ 'custom-usp.css' | asset_url | stylesheet_tag }}

    <div class="page-width padding-{{ section.id }}">
      {% if section.settings.heading != blank %}
        <h3 class="usp-heading">{{ section.settings.heading }}</h3>
      {% endif %}
      <div class="usp-container">
        {%- for block in section.blocks -%}
          <div>{{ block.settings.usp_icon }}</div>
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
{% else %}
  <div class="lazy-section-spinner-container">
    {%- render 'loading-spinner' -%}
  </div>
{% endif %}

{% if lazy_load != blank %}
  </lazy-section>
{% endif %}

{% schema %}
{
  "name": "USP Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Product USP"
    },
    {
      "type": "header",
      "content": "Desktop padding"
    },
    {
      "type": "range",
      "id": "desktop_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top desktop",
      "default": 0
    },
    {
      "type": "range",
      "id": "desktop_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom desktop",
      "default": 32
    },
    {
      "type": "header",
      "content": "Mobile padding"
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 0
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom mobile",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "usp",
      "name": "USP Block",
      "settings": [
        {
          "type": "text",
          "id": "usp_icon",
          "label": "USP Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "USP Section"
    }
  ]
}
{% endschema %}
